<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <SelectDialog id="createClassSelectDialog"
                  title="Pick a class"
                  items="{/Classes}"
                  multiSelect="false"
                  confirm="onConfirmItem"
                  cancel="onConfirmItem">
        <StandardListItem id="createClassDialogList"
                          title="{class} - {classDesc}"
                          description="{classType}">
        </StandardListItem>
    </SelectDialog>
</core:FragmentDefinition>